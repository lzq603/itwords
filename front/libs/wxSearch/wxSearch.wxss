.wxSearch-panel {
  display: flex;
  flex-direction: row;
}
.wxSearch-input {
  flex: 8;
  margin-right: 12px;
  padding: 6px 12px;
  background-color: #f5f5f5;
  font-size: 14px;
  border-radius: 4px;
}
.wxSearch-button {
  flex: 1;
  padding: 4rpx 24rpx;
  background-color: #2196f3;
  color: #ffffff;
  font-size: 14px;
  border-radius: 4px;
  text-align: center;
}
.wxSearchTitle {
  display: block;
  margin-top: 16px;
  font-size: 16px;
}
.wxSearchMindKeyItem,
.wxSearchKeyItem,
.wxSearchHistoryItem {
  display: flex;
  padding: 8px 0;
  color: #2196f3;
  font-size: 14px;
  border-bottom: 1px solid #eee;
}
.wxSearchHistoryEmpty,
.wxSearchDeleteAllBtn {
  margin-top: 16px;
  color: #bdbdbd;
  font-size: 12px;
}
